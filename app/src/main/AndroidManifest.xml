        android:icon="@drawable/icon_floating_action_button"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.DanhSachGoiYActivity"></activity>
        <activity android:name=".Activity.ListSongOffActivity" />
        <activity android:name=".Activity.CommentActivity" /> <!-- <activity android:name=".Activity.MainActivity"></activity> -->
        <activity android:name=".Activity.PlayMusicActivity" />
        <activity android:name=".Activity.ListSongActivity" />
