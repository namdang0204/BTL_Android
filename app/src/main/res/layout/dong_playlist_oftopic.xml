<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:background="#CFDDDA"

    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <FrameLayout
        android:layout_margin="5dp"
        android:id="@+id/fragmentlayout_playlist_oftopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imageview_playlist_oftopic"
        android:layout_width="160dp"
        android:layout_height="160dp" />
    </FrameLayout>
    <TextView
        android:layout_gravity="center"
        android:textColor="@color/mautim"
        android:textSize="14dp"
        android:text="Nhac Hot"
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/textview_name_playlist_oftopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    
</android.support.v7.widget.CardView>