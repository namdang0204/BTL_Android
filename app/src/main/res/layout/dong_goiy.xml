<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_goiy"
        android:background="@null"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageview_image_goiy"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </android.support.v7.widget.CardView>

    <TextView

        android:layout_toRightOf="@id/cardview_goiy"
        android:textColor="@color/mauden"
        android:id="@+id/textview_name_song_goiy"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="16dp"
        android:text="Thà đừng nói ra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="italic"
        android:layout_toRightOf="@id/cardview_goiy"
        android:layout_below="@id/textview_name_song_goiy"
        android:textColor="@color/mauden"
        android:id="@+id/textview_name_singer_goiy"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:text="Minh Vương M4U"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/image_button_goiy"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_menu2"
        android:layout_width="20dp"
        android:layout_height="30dp" />

</RelativeLayout>