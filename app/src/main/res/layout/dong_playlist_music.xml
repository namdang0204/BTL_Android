<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dong_playlist_music"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">
    <!--android:background="#40FDDD02"-->

    <TextView
        android:id="@+id/textview_index_playlist_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_imageview_music_playing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textview_name_singer_playlist_music"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/textview_index_playlist_music" />

    <TextView
        android:id="@+id/textview_name_song_playlist_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gif_imageview_music_playing"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:text="Ten bai hat"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textview_name_singer_playlist_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_name_song_playlist_music"
        android:layout_toRightOf="@id/textview_index_playlist_music"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:text="Ten ca si"
        android:textColor="#99000000"
        android:textSize="14sp" />

</RelativeLayout>