<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_index_playlist_music"
            android:layout_margin="10dp"
            android:text="1"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_name_song_playlist_music"
            android:textColor="#FFFFFF"
            android:text="Ten bai hat"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:layout_toRightOf="@id/textview_index_playlist_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_name_singer_playlist_music"
            android:textColor="#99000000"
            android:text="Ten ca si"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:layout_toRightOf="@id/textview_index_playlist_music"
            android:layout_below="@id/textview_name_song_playlist_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>