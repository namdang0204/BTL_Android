<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/textview_title_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:text="CHỦ NHẬT ÊM ĐỀM"
        android:textColor="#f00"
        android:textSize="15dp" />

    <ListView
        android:id="@+id/listview_playlist"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_title_playlist"
        android:layout_marginTop="35dp"></ListView>

    <TextView
        android:id="@+id/textview_viewmore_playlist"
        android:text="View more"
        android:textSize="10dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:textColor="#BD9AEB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listview_playlist"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:background="#E0E2F1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />


</RelativeLayout>