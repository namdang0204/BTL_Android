<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_song_off"
        android:background="@null"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageview_list_song_off"
            android:src="@drawable/icon_song_off"
            android:background="@color/mauXamNhat"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_toRightOf="@id/cardview_song_off"
        android:textColor="@color/mauden"
        android:id="@+id/tv_name_song_off"
        android:layout_marginTop="5dp"
        android:textSize="14dp"
        android:text="Name Song Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@id/cardview_song_off"
        android:layout_below="@id/tv_name_song_off"
        android:textColor="@color/mauXamNhat"
        android:id="@+id/tv_name_singer_off"
        android:layout_marginTop="5dp"

        android:textSize="12dp"
        android:text="Name Singer Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/image_button_menu_song_off"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_menu2"
        android:layout_width="20dp"
        android:layout_height="30dp" />



</RelativeLayout>