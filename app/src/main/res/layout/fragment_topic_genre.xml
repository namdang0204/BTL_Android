<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtview_title_topic_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHỦ ĐỀ VÀ THỂ LOẠI "
        android:textStyle="bold" />

    <TextView
        android:textSize="13sp"
        android:id="@+id/txtview_viewmore_topic_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Xem thêm"
        android:textColor="@color/mautim" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview_title_topic_genre"
        android:scrollbars="none"></HorizontalScrollView>


</RelativeLayout>